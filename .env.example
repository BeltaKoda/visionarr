# Visionarr Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED: Radarr Configuration
# =============================================================================
RADARR_URL=http://localhost:7878
RADARR_API_KEY=your-radarr-api-key-here

# =============================================================================
# OPTIONAL: Sonarr Configuration
# =============================================================================
# SONARR_URL=http://localhost:8989
# SONARR_API_KEY=your-sonarr-api-key-here

# =============================================================================
# Operation Mode
# =============================================================================
# DRY_RUN: When True, logs what would happen without modifying files
# CRITICAL: Leave True until you've verified detection is working correctly!
DRY_RUN=True

# MANUAL_MODE: When True, starts interactive console instead of daemon
# Use this for one-off conversions or library scans
MANUAL_MODE=False

# =============================================================================
# Polling Configuration
# =============================================================================
# How often to check for new imports (seconds)
POLL_INTERVAL_SECONDS=300

# How far back to look in history (minutes)
LOOKBACK_MINUTES=60

# =============================================================================
# Processing Configuration
# =============================================================================
# Maximum simultaneous conversions (recommend 1 to avoid disk thrashing)
PROCESS_CONCURRENCY=1

# Minimum free disk space required before processing (GB)
MIN_FREE_SPACE_GB=50

# Temporary directory for processing (must have space for 2x largest file)
TEMP_DIR=/tmp/visionarr

# =============================================================================
# Backup Configuration
# =============================================================================
# Keep .original backup files after successful conversion
BACKUP_ENABLED=True

# Auto-delete backups after X days (0 = never delete)
BACKUP_RETENTION_DAYS=7

# =============================================================================
# Logging Configuration
# =============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Optional: Log to file in addition to stdout
# LOG_FILE=/config/visionarr.log

# =============================================================================
# Notifications (Optional)
# =============================================================================
# Discord/Slack/Generic webhook URL for notifications
# WEBHOOK_URL=https://discord.com/api/webhooks/...
