# Visionarr Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Scheduled Scan Configuration
# =============================================================================
# How often to run delta scans (minutes) - skips already processed files
DELTA_SCAN_INTERVAL_MINUTES=30

# Day of week for full library scan (monday, tuesday, wednesday, etc.)
FULL_SCAN_DAY=sunday

# Time to run full scan (24-hour format)
FULL_SCAN_TIME=03:00

# =============================================================================
# Operation Mode
# =============================================================================
# MANUAL_MODE: When True, starts interactive console instead of daemon
# Use this for one-off conversions or library scans
# NOTE: Auto-processing is disabled on first run until you complete
#       initial setup via the menu (docker exec -it visionarr menu)
MANUAL_MODE=False

# =============================================================================
# Processing Configuration
# =============================================================================
# Maximum simultaneous conversions (recommend 1 to avoid disk thrashing)
PROCESS_CONCURRENCY=1

# Minimum free disk space required before processing (GB)
MIN_FREE_SPACE_GB=50

# Temporary directory for processing (must have space for 2x largest file)
TEMP_DIR=/tmp/visionarr

# =============================================================================
# Backup Configuration
# =============================================================================
# NOTE: Backup setting is now controlled via the Settings menu and persisted
#       in the database. It defaults to enabled (keeps .original files).
# Auto-delete backups after X days (0 = never delete)
BACKUP_RETENTION_DAYS=7

# =============================================================================
# Logging Configuration
# =============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# =============================================================================
# Notification Configuration (optional)
# =============================================================================
# Discord webhook for notifications
# DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/...

# Or Pushover
# PUSHOVER_USER_KEY=your-user-key
# PUSHOVER_APP_TOKEN=your-app-token
